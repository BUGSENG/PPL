use Getopt::Long;

sub usage {
	print STDERR <<EOF;
Convert ASCII text into the declaration of a C++ array.
Usage: text2cxxarray [OPTIONS] [FILE ...]
  [FILE ...]                  ASCII text file(s) to convert.

  [OPTIONS]
    --name=NAME               Use NAME as the array name.
    --definition              Emit a defining declaration.
    -h, --help                Display this help message.
EOF
        exit 1;
}

my $array_name = "a";
my $decl_only = 0;

GetOptions(
	'name=s'    => \$array_name,
	'decl-only' => \$decl_only,
	'help|h'    => \&usage,
) || usage();

my @lines = <>;
my $size = @lines + 1;

print "extern const char* const ";
print $array_name;
print "[$size]";

if (! $decl_only) {
    print " = {\n";
    foreach (@lines) {
        chop;
        s/\\/\\\\/g;
        s/\t/\\t/g;
        s/\"/\\"/g;
        print "  \"$_\",\n";
    }
    print "  0";
    print "}";
}

print ";\n";
