	*
	interfaces/Java/jni/ppl_interface_generator_java_classes_cc_code.m4
	, interfaces/Java/jni/ppl_java_common.defs.hh,
	interfaces/Java/jni/ppl_java_common.inlines.hh,
	interfaces/Java/jni/ppl_java_globals.cc,
